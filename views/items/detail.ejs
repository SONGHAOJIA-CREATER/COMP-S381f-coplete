<%- include('../partials/header', { title: item.title, activeNav: 'items' }) %>

<div class="row g-4">
  <div class="col-lg-6">
    <div class="ratio ratio-4x3 rounded-4 overflow-hidden shadow-sm">
      <img
        src="<%= item.imagePath ? '/' + item.imagePath : 'https://placehold.co/800x600?text=No+Image' %>"
        alt="<%= item.title %>"
        class="w-100 h-100 object-fit-cover"
      />
    </div>
  </div>
  <div class="col-lg-6">
    <div class="card shadow-sm h-100">
      <div class="card-body d-flex flex-column">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <span class="badge bg-primary-subtle text-primary"><%= categoryLabel(item.category) %></span>
            <span class="text-muted small"><%= tr('发布者：', 'Seller: ') %><%= item.seller.username %></span>
        </div>
        <h1 class="h3 fw-bold mb-3"><%= item.title %></h1>
        <p class="lead text-primary fw-semibold">¥ <%= item.price.toFixed(2) %></p>
          <p class="text-muted flex-grow-1"><%= item.description || tr('暂无描述', 'No description yet') %></p>
        <div class="mt-4">
            <p class="small text-muted mb-2"><%= tr('发布时间：', 'Published at: ') %><%= item.createdAt.toLocaleString() %></p>
          <div class="d-flex gap-3">
              <a href="/items" class="btn btn-outline-secondary"><%= tr('返回列表', 'Back to list') %></a>
            <% if (currentUser && item.seller._id.toString() === currentUser.id) { %>
              <a href="/items/<%= item._id %>/edit" class="btn btn-primary"><%= tr('编辑', 'Edit') %></a>
            <form action="/items/<%= item._id %>?_method=DELETE" method="POST" onsubmit="return confirmDelete()">
                <button class="btn btn-outline-danger"><%= tr('删除', 'Delete') %></button>
            </form>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>

